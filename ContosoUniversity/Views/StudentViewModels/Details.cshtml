@model ContosoUniversity.Models.SchoolViewModels.StudentViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>StudentViewModel</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Student.FirstMidName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.EnrollmentDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.EnrollmentDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Student.Enrollments)
        </dt>
        <dd>

            <div class="row">
                <div class="col-sm-3 h3">Course Title</div>
                <div class="col-sm-3 h3">Credits</div>
                <div class="col-sm-3 h3">Grade</div>
                <div class="col-sm-3 h3"></div>
            </div>
            @foreach (var item in Model.Enrollments)
            {

                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Course.Title)
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Course.Credits)
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Grade)
                </div>
                        <div class="col-sm-12"><b>Instructor(s)</b></div>
                        @foreach (var assignment in Model.CourseAssignments)
                        {
                            @if (assignment.CourseID == item.CourseId)
                            {


                                <div class="col-sm-3"></div>
                                <div class="col-sm-8">
                                    @Html.DisplayFor(modelItem => assignment.Instructor.FullName)
                                </div>

                            }
                        }
            }

        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>